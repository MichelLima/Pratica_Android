<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.validador_cpf.ValidadorActivity">

    <TextView
        android:id="@+id/txt_DigiteCPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_cpf"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <EditText
        android:id="@+id/numCPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_DigiteCPF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="154dp" />

    <Button
        android:id="@+id/btCPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_cpf"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="239dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btCPF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="378dp" />

</android.widget.RelativeLayout>
