<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.validador_cpf.MainActivity">

    <TextView
        android:id="@+id/txt_cpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/btValidaCpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consultarCPF"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/txt_cpf"
        android:layout_toLeftOf="@+id/txt_cpf"
        android:layout_toStartOf="@+id/txt_cpf" />

    <Button
        android:id="@+id/btListaConsultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:text="@string/cpfListados"
        android:layout_alignBaseline="@+id/btValidaCpf"
        android:layout_alignBottom="@+id/btValidaCpf"
        android:layout_toRightOf="@+id/txt_cpf"
        android:layout_toEndOf="@+id/txt_cpf" />

    <Button
        android:id="@+id/BtCuriosidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CuriosidadeCPF"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/btValidaCpf"
        android:layout_alignLeft="@+id/btValidaCpf"
        android:layout_alignStart="@+id/btValidaCpf" />

    <Button
        android:id="@+id/btSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SobreCPF"
        android:layout_alignBaseline="@+id/BtCuriosidade"
        android:layout_alignBottom="@+id/BtCuriosidade"
        android:layout_alignRight="@+id/btListaConsultados"
        android:layout_alignEnd="@+id/btListaConsultados"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />


</android.widget.RelativeLayout>
